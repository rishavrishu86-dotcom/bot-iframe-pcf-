{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["dom", "es2017"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "./out",
    "jsx": "react",
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
